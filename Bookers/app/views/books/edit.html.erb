<h1>Editing Book</h1>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<% if flash.now[:error] %>
  <p><%= flash.now[:error] %></p>
<% end %>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
<% end %>

<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>